<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentJeu.FramJeuSansMaps">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Update blank fragment layout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sans maps" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ma_position_actuelle"
             />
        <TextView
            android:id="@+id/tv_jeusansmap_coordonneeactuelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        <TextView
            android:id="@+id/tv_jeusansmap_coordonneestreetart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="coordonee du street art" />
        <TextView
            android:id="@+id/tv_jeusansmap_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="distance" />
        <TextView
            android:id="@+id/tv_jeusansmap_rapprochement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rapprochement" />
        <TextView
            android:id="@+id/tv_jeusansmap_estouest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="estouest" />
        <TextView
            android:id="@+id/tv_jeusansmap_nordsud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nordsud" />
        <ImageView
            android:id="@+id/img_jeusansmap_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/boussole2"/>
    </LinearLayout>



</FrameLayout>
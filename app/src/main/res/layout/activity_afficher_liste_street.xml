<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AfficherListeStreet">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/sp_afficherliste_liste"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            />
        <View
            android:layout_width="05dp"
            android:layout_height="0dp"
            />
        <Button
            android:id="@+id/bt_afficherliste_AfficherListe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afficher"/>
        <View
            android:layout_width="05dp"
            android:layout_height="0dp"
            />
        <Button
            android:id="@+id/bt_afficherliste_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_AfficherlisteStreet_item"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
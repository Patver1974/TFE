<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".helpfirebase.SaveFirebase"
    tools:ignore="ExtraText">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/bt_firebase_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="read"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_firebase_commentread"/>
</LinearLayout>
    <Button
        android:id="@+id/bt_firebase_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"/>
    <Button
        android:id="@+id/bt_firebase_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"/>

    <TextView
        android:id="@+id/tv_firebase_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="azerazer" />




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFC"
    android:orientation="vertical"
    tools:context=".MainActivityLogo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_main_walkingman"
            android:layout_width="99dp"
            android:layout_height="131dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="172dp"
            android:layout_marginTop="288dp"
            android:src="@drawable/walkingmen"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_main_slogan"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:text="Marcher a BXL"
            android:textColor="@color/purple_200"
            android:textSize="40sp"
            android:textStyle="bold"
            android:fontFamily="@font/united"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</RelativeLayout>